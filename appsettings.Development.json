{
  "Serilog":{
    "Using": [
      "Serilog.Sinks.Console", 
      "Serilog.Sinks.File"
    ],
    "MinimumLevel":{
      "Default": "Information",
      "Override":{
        "Microsoft":"Information",
        "System":"Information"
      }
    },
    "WriteTo":[
      {"Name":"Console"},
      {
        "Name":"File",
        "Args":{
          "path":"./logs/log-.log",
          "rollingInterval":"Day",
          "rollOnFileSizeLimit": true,
          "formatter":"Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [
      "FromLogContext", 
      "WithMachineName", 
      "WithTreadId", 
      "WithRequestId", 
      "WithClientIp"
    ]
  }
}
